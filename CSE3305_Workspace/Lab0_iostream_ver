#include <iostream>
#include <assert.h>

using namespace std;

void lessonSum (int n) {
    int total = 0;
    for (int i = 0; i <= n; i++) {
        if (i == n) {
            cout << i;
        }
        else {
            cout << i << " + ";
        }
        total += i;
    }
    cout << " = " << total << endl;
}

int main() {
    //Part One
    cout << "Logan Thompson\nlthomp92@students.kennesaw.edu" << endl;
    
    //Part Two
    int num;
    cout << "Please enter a positive integer: ";
    cin >> num;
    lessonSum(num);
    
    //Part Three
    for (int i = 8; i >= 0; i-=2) {
        for (int j = i; j >= 0; j-=2)
            cout << j << " ";
        cout << "\n";
    }
    
    return 0;
}